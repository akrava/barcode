{
  "name": "barcode-generator",
  "version": "1.0.0",
  "description": "Barcode generator",
  "main": "./dist/main.js",
  "scripts": {
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run clean && npm run build && electron ./dist/main.js",
    "pack": "electron-builder build",
    "dev:electron": "set NODE_ENV=development && webpack --config webpack.electron.config.js --mode development && electron ./dist/main.js",
    "dev:react": "set NODE_ENV=development && webpack-dev-server --config webpack.react.config.js --mode development --target web",
    "build:electron": "set NODE_ENV=production && webpack --config webpack.electron.config.js --mode production",
    "build:react": "set NODE_ENV=production && webpack --config webpack.react.config.js --mode production",
    "build": "npm run build:electron && npm run build:react",
    "clean": "rimraf dist && rimraf build",
    "pack-all": "npm run clean && npm run build && npm run pack"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Oleksii Atamaniuk",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.16.3",
    "@types/file-saver": "^2.0.4",
    "@types/pngjs": "^6.0.1",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "aws4": "^1.11.0",
    "babel-loader": "^8.2.2",
    "bson-ext": "^4.0.2",
    "dotenv": "^10.0.0",
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "kerberos": "^1.1.7",
    "mongodb-client-encryption": "^1.2.7",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "react": "^17.0.2",
    "react-digit-input": "^2.1.0",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "snappy": "^7.0.5",
    "typescript": "^4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "build": {
    "appId": "barcode_generator.atamaniuk",
    "productName": "Barcode ITF-14 program",
    "copyright": "Copyright Â© 2021 Oleksii Atamaniuk",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "mongodb": "^4.2.1",
    "mongoose": "^6.0.13",
    "pngjs": "^6.0.0"
  }
}
